<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PoetryTextView">
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="row_padding" format="dimension"/>
        <attr name="line_padding" format="dimension"/>
        <attr name="number_offset" format="dimension"/>
        <attr name="number_vertical_offset" format="dimension"/>
    </declare-styleable>

</resources>
